	<select id="findOrdersUser" resultType="com.youmeek.ssm.module.user.entities.OrdersCustom">
		SELECT
		orders.*,
		USER.username,
		USER.sex,
		USER.address
		FROM
		orders,
		USER
		WHERE orders.user_id = user.id
	</select>
	
	
